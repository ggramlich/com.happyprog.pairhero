<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.views">
      <category
            name="Pair Hero"
            id="com.happyprog.pairhero">
      </category>
      <view
            name="Pair Hero"
            icon="icons/icon.png"
            category="com.happyprog.pairhero"
            class="com.happyprog.pairhero.views.MainView"
            id="com.happyprog.pairhero.views.MainView">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.jdt.ui.JavaPerspective">
         <view
               ratio="0.5"
               relative="org.eclipse.ui.views.TaskList"
               relationship="right"
               id="com.happyprog.pairhero.views.MainView">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.help.contexts">
      <contexts
            file="contexts.xml">
      </contexts>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="com.happyprog.pairhero.preferences.PreferencePage"
            id="com.happyprog.pairhero.preferences.PreferencePage"
            name="PairHero Preferences">
      </page>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="com.happyprog.pairhero.preferences.PreferenceInitializer">
      </initializer>
   </extension>

</plugin>
